        map.style.display = "block";

        var parent = document.getElementById('wrapper');
        parent.style.display = "block";

        canvas.width = parent.offsetWidth;
        canvas.height = parent.offsetHeight;

        var popup = e.target.getPopup();
        var content = popup.getContent().replace(/(^\d\d-)/g, '');
        
        var prediction_values = prediction[content]
        
        var actual_values = actual[content]
        
		var indexes = Object.keys(prediction_values)

		actual_values = Object.values(actual_values)		
		prediction_values = Object.values(prediction_values)

        var datitos = {

            labels: indexes,
            datasets: [
